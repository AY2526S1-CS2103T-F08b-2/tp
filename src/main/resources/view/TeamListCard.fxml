<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="125" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="teamName" text="\$teamName" styleClass="cell_big_label" />
      </HBox>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <padding>
          <Insets top="5" />
        </padding>
        <Label fx:id="hackathonName" text="\$hackathonName" />
      </HBox>
      <Label fx:id="memberCount" text="\$memberCount">
        <padding>
          <Insets top="3" />
        </padding>
      </Label>
      <Region styleClass="separator">
        <padding>
          <Insets top="8" bottom="8" />
        </padding>
      </Region>
      <FlowPane fx:id="members">
        <padding>
          <Insets top="5" />
        </padding>
      </FlowPane>
    </VBox>
  </GridPane>
</HBox>
